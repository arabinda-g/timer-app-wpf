<Window x:Class="Timer_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer_App"
        mc:Ignorable="d"
        Title="Countdown Timer" Height="100" Width="200"
        WindowStartupLocation="Manual" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        OpacityMask="Black" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <Border x:Name="MainBorder" CornerRadius="10" Padding="10">
            <TextBlock x:Name="timeText" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Text="00:00"/>
        </Border>
    </Grid>
</Window>
